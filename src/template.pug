doctype html
html
  head
    meta(charset="utf-8")
    title Langton's Ant    
    link(rel='stylesheet', href=require('bootstrap-reboot.min.css'))
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300&display=swap", rel="stylesheet") 
    link(rel='stylesheet' href=require('styles.css'))
  body
    canvas(id="langtons-world")
    div(class="controls-overlay")
      textarea#langtons-brain(rows="18", cols="60")
      div(class="on-off-buttons")
        a.btn(id="turn-on-langtons-brain") start
        a.btn(id="turn-off-langtons-brain") stop
      div.speed-dial
        div#current-speed
        div.speed-slider-container
          input#speed-slider(type="range", min="1", max="1000", step="10", value="200")
      div.app-title
        h1 Langton's
        h3 Ant
        h4 &#128028;
    script(src=require('simulation.js'))
